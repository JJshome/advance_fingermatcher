# Advanced Fingerprint Matcher Editor Configuration
# https://editorconfig.org/

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.{py,pyx}]
indent_style = space
indent_size = 4
max_line_length = 88

[*.{yml,yaml}]
indent_style = space
indent_size = 2

[*.{json,js}]
indent_style = space
indent_size = 2

[*.{md,rst}]
trim_trailing_whitespace = false
max_line_length = 100

[*.{toml,cfg,ini}]
indent_style = space
indent_size = 4

[Makefile]
indent_style = tab
indent_size = 4

[*.{sh,bash}]
indent_style = space
indent_size = 2
end_of_line = lf

[*.{bat,cmd}]
end_of_line = crlf

[.gitignore]
insert_final_newline = false

[*.txt]
insert_final_newline = false